namespace Eco.Gameplay.Items.Recipes
{
    public partial class SteamTruckInvention: InventionRecipe
    {
        public SteamTruckInvention() 
        {
            this.FabricationIngredients = new FabricationElement[]
            {
                new FabricationElement(typeof(IronPlateItem), 12),
                new FabricationElement(typeof(IronPipeItem), 8),
                new FabricationElement(typeof(ScrewsItem), 24),
                new FabricationElement(typeof(LeatherHideItem), 20),
                new FabricationElement("Lumber", 30),
                new FabricationElement(typeof(PortableSteamEngineItem), 1, true),
                new FabricationElement(typeof(IronWheelItem), 4, true),
                new FabricationElement(typeof(IronAxleItem), 2, true),
                new FabricationElement(typeof(LightBulbItem), 2, true),
                new FabricationElement(typeof(LubricantItem), 2, true)
            };

            this.FabricationProducts = new FabricationElement[]
            {
                new(typeof(SteamTruckItem), 1, true)
            };

            this.RequiredKits = new List<Item>()
            {
                Item.Get(typeof(SteamAgePowerPrototypingKit)),
                Item.Get(typeof(SteamAgeVehiclePrototypingKit)),
            }.ToArray();

            this.InventionLabor     = 100f;
            this.InventionTime      = 10f;

            this.RequiredSkills = new RequiredSkill[] { new RequiredSkill(typeof(MechanicsSkill), 1) };

            this.Initialize(displayText: Localizer.DoStr("Steam Truck Invention"),
                            referencedRecipeFamilyType: typeof(SteamTruckRecipe),
                            referencedDrawing:  typeof(SteamTruckDrawingItem));
        }
    }

    [Serialized]
    [Weight(100)]
    [LocDisplayName("Steam Truck Technical Drawing")]
    [Tag("Drawing")]
    public partial class SteamTruckDrawingItem: DrawingItem {}
}
